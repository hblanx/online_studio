from tkinter import *

root = Tk()
root.title("温度查询")
Label(root, text="城市中文:").grid(row=0)
e1 = Entry(root)
e1.grid(row=0, column=1, padx=10, pady=5)

def show():    
    cs=e1.get()
    
    messagebox.showinfo('温度',cs)
    e1.delete(0, END)

Button(root, text="获取信息", width=10, command=show).grid(row=3, column=0, sticky=W, padx=10, pady=5)


mainloop()
