<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FormActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="12dp"
        android:paddingBottom="30dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:text="需求描述" />
        <View
            android:layout_width="300dp"
            android:layout_height="1.2dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="#AAAAAA"
            android:layout_gravity="center"/>
        <EditText
            android:id="@+id/Msg"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:minLines="3"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="请输入描述"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="需求名称："
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:id="@+id/name"
                android:hint="请输入名称"/>
        </LinearLayout>
        <View
            android:layout_width="300dp"
            android:layout_height="1.2dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="#AAAAAA"
            android:layout_gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="需求类型："
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"/>
            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown"
                android:entries="@array/needType"
                android:id="@+id/id_needType"
                />
        </LinearLayout>
        <View
            android:layout_width="300dp"
            android:layout_height="1.2dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="#AAAAAA"
            android:layout_gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="需求预算："
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"/>
            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown"
                android:entries="@array/needMoney"
                android:id="@+id/id_needMoney"
                />
        </LinearLayout>
        <View
            android:layout_width="300dp"
            android:layout_height="1.2dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="#AAAAAA"
            android:layout_gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="完成周期："
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"/>
            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown"
                android:entries="@array/needTime"
                android:id="@+id/id_needTime"
                />
        </LinearLayout>
        <View
            android:layout_width="300dp"
            android:layout_height="1.2dp"
            android:background="#AAAAAA"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="需求部门："
                android:background="@null"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>
            <EditText
                android:id="@+id/group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="xx部门xx组"/>
        </LinearLayout>
        <View
            android:layout_width="300dp"
            android:layout_height="1.2dp"
            android:background="#AAAAAA"
            android:layout_gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="联系人："
                android:textColor="@color/black"/>
            <EditText
                android:id="@+id/contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="请输入联系人"/>
        </LinearLayout>
        <View
            android:layout_width="300dp"
            android:layout_height="1.2dp"
            android:background="#AAAAAA"
            android:layout_gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="联系方式："
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>
            <EditText
                android:id="@+id/contactInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="请输入联系方式"/>
        </LinearLayout>
        <View
            android:layout_width="300dp"
            android:layout_height="1.2dp"
            android:background="#AAAAAA"
            android:layout_gravity="center"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:background="#4891FF"
            android:text="确定"
            android:onClick="formSend"
            android:textColor="@color/white" />


    </LinearLayout>
</ScrollView>